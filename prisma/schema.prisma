datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @map("_id")
  sessions Session[]

  name     String
  email    String  @unique
  image    String?
  password String? // creadentials
  googleId String? @unique // googleAuth

  @@map("users")
}

model Session {
  id        String   @id @map("_id")
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("sessions")
}
